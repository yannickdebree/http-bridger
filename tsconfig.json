{
	"compilerOptions":
	{
		"baseUrl": "src",
		"target": "es6",
		"module": "amd",
		"outFile": "dist/http-bridger.js",
		"removeComments": true,

		"lib":
		[
			"ES2017",
			"DOM"
		],

		"paths":
		{
			"*": [
				"*",
				"generated/*"
			]
		}
	},

	"include":
	[
		"src/**/*"
	],

	"exclude":
	[
		"node_modules"
	]
}